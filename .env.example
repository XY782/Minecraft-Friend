# Minecraft server connection
MC_HOST=localhost
MC_PORT=5565
MC_USERNAME=BotFriend
# Optional: only if the server requires auth
# MC_PASSWORD=
# MC_AUTH=microsoft

# Version selection
# By default Mineflayer auto-negotiates the version with the server.
# If you want to FORCE a specific Minecraft version, set MC_PIN_VERSION=true
# and put the exact version in MC_VERSION.
MC_PIN_VERSION=false
# Exact Minecraft version (only used when MC_PIN_VERSION=true)
MC_VERSION=1.19.4

# Gemini (Google Generative AI)
GEMINI_API_KEY=AIzaSyA4qBfL9A7kHFX2yIWe8xTe9_LT4MvKJH0
# Examples: gemini-1.5-flash, gemini-1.5-pro
GEMINI_MODEL=gemini-3-flash-preview

# Bot behavior
# If true, bot will announce it's a bot on join
BOT_ANNOUNCE=true
# Max chat messages per 10 seconds
BOT_CHAT_RATE=5
# Reply policy: mention | nearby | all
BOT_REPLY_MODE=nearby
# Minimum delay before replying again to the same player (ms)
BOT_REPLY_COOLDOWN_MS=2500
# Shorter cooldown when the bot is directly mentioned
BOT_REPLY_MENTION_COOLDOWN_MS=900
# For nearby mode, max distance to consider someone "near" (blocks)
BOT_REPLY_DISTANCE=18
# Anti-repeat response memory
BOT_ANTI_REPEAT_ENABLED=true
# Number of recent phrases to remember and avoid repeating
BOT_ANTI_REPEAT_WINDOW=8
# Allow AI to use slash commands (cheats) when needed
BOT_ALLOW_CHEATS=false
# Detect local LLM endpoints (Ollama/LM Studio) and log them in session memory
BOT_LOCAL_LLM_DETECTOR_ENABLED=false

# Autonomous exploring
# Start roaming automatically after spawn
BOT_AUTO_EXPLORE=true
# Random roam target radius in blocks
BOT_EXPLORE_RADIUS=48
# Delay between explore legs in milliseconds
BOT_EXPLORE_PAUSE_MS=5000

# Human-like behavior tuning
BOT_HUMANIZE=true
# Max autonomous actions that can be attempted together each decision step (1-3)
BOT_MAX_CONCURRENT_ACTIONS=3
# Chat reply delay range in milliseconds
BOT_REPLY_MIN_MS=180
BOT_REPLY_MAX_MS=900
# How often to do idle look-around checks
BOT_LOOK_AROUND_MS=8000

# Equipment behavior
# Auto-equip best available armor/elytra during autonomous decisions
BOT_EQUIP_ENABLED=true
# If true and elytra is available, it prefers elytra in chest slot
BOT_PREFER_ELYTRA=true
# Creative flight rollout
# Master switch for creative flight behavior
BOT_ALLOW_CREATIVE_FLIGHT=false
# Stage 0: off | Stage 1: short lift only | Stage 2: full flyTo navigation
BOT_CREATIVE_FLIGHT_STAGE=1

# Enchanting
BOT_ENCHANT_SEARCH_RADIUS=20

# Puppet mode (manual keyboard control for demonstrations)
# Enable to manually drive the bot from the bot process terminal.
BOT_PUPPET_MODE=false
# Auto-enable control on spawn (press P to toggle during runtime)
BOT_PUPPET_AUTO_ACTIVATE=true
# Print puppet mode guidance and status logs
BOT_PUPPET_ANNOUNCE=true

# First-person viewer + browser puppet controls
# Starts a bot POV viewer and control page (WASD + mouse look).
BOT_FPV_PUPPET_ENABLED=false
BOT_FPV_VIEWER_PORT=3007
BOT_FPV_CONTROL_PORT=3010
BOT_FPV_AUTO_OPEN=true
BOT_FPV_VIEW_DISTANCE=6
BOT_FPV_MOUSE_SENSITIVITY=0.002

# Training data recorder (Phase 1)
# Enables state->action JSONL logging under Training/datasets
BOT_TRAINING_ENABLED=true
# Capture interval in ms (500-1000 recommended)
BOT_TRAINING_INTERVAL_MS=1000
# Print each recorded sample in runtime terminal
BOT_TRAINING_LIVE_CONSOLE=true
# Windows only: launches separate PowerShell monitor window
BOT_TRAINING_POPUP_MONITOR=false
